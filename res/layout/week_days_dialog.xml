<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8dp" >

    <TextView
        style="@style/TextViewDialogHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/training_days" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/divider_list" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/chBxMonday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Понедельник" />

            <CheckBox
                android:id="@+id/chBxTuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вторник" />

            <CheckBox
                android:id="@+id/chBxWednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Среда" />

            <CheckBox
                android:id="@+id/chBxThursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Четверг" />

            <CheckBox
                android:id="@+id/chBxFriday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пятница" />

            <CheckBox
                android:id="@+id/chBxSaturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Суббота" />

            <CheckBox
                android:id="@+id/chBxSunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Воскресенье" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>